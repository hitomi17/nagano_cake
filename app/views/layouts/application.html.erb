<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <a class="navbar-brand text-dark" href="/"><span>nagano cake</span></a>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to about_path do %>
                    <button type="button" class="btn btn-light ml-2">マイページ</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path do %>
                    <button type="button" class="btn btn-light ml-2">商品一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path do %>
                    <button type="button" class="btn btn-light ml-2">カート</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <button type="button" class="btn btn-light">ログアウト</button>
                  <% end %>
                </li>

              <% else %>
                <li>
                  <%= link_to about_path do %>
                    <button type="button" class="btn btn-light ml-2">About</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to public_items_path do %>
                    <button type="button" class="btn btn-light ml-2">商品一覧</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_registration_path do %>
                    <button type="button" class="btn btn-light ml-2">新規登録</button>
                  <% end %>
                </li>
                <li>
                  <%= link_to new_user_session_path do %>
                    <button type="button" class="btn btn-light ml-2">ログイン</button>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
