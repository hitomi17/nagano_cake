<main>
  <div class="container">
    <h4 class="my-5 ml-5">新規会員登録</h4>
    <%= form_with model: @user, url: user_registration_path do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row ml-5">
        <div class="col-2"><%= f.label "名前" %></div>
        <div class="col-1"><%= f.label :last_name, "(性)" %></div>
        <div class="col-4">
          <%= f.text_field :last_name %>
        </div>
        <div class="col-1"><%= f.label :first_name, "(名)" %></div>
        <div class="col-4">
          <%= f.text_field :first_name %>
        </div>
      </div>


      <div class="row ml-5">
        <div class="col-2"><%= f.label "フリガナ" %></div>
        <div class="col-1"><%= f.label :last_name_kana, "(セイ)" %></div>
        <div class="col-4">
          <%= f.text_field :last_name_kana %>
        </div>
        <div class="col-1"><%= f.label :first_name_kana, "(メイ)" %></div>
        <div class="col-4">
          <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="row ml-5">
          <div class="col-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-9">
            <%= f.email_field :email, autocomplete: "email" %>
          </div>
      </div>

      <div class="row ml-5">
          <div class="col-3">
            <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-9">
            <%= f.text_field :postal_code %>
          </div>
      </div>

      <div class="row ml-5">
          <div class="col-3">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-9">
            <%= f.text_field :address, :size=>"73" %>
          </div>
      </div>

      <div class="row ml-5">
          <div class="col-3">
            <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
          </div>
          <div class="col-9">
            <%= f.text_field :telephone_number %>
          </div>
      </div>

      <div class="row ml-5">
          <div class="col-3">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="col-9">
            <!--<% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>-->
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
      </div>

      <div class="row ml-5">
        <div class="col-3">
          <%= f.label :password_confirmation, "パスワード(確認用)" %>
        </div>
        <div class="col-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="row ml-5">
        <div class="col-3"></div>
        <div class="col-9">
          <div class="actions">
            <%= f.submit "Sign up", class: 'btn btn-success' %>
          </div>
        </div>
      </div>
    <% end %>

    <h4 class="my-5 ml-5">既に登録済みの方</h4>
    <div class="row ml-5">
      <p class="ml-5">
        <%= link_to "こちら", new_user_session_path %>
        からログインしてください。
      </p>
    </div>

  </div>


</main>

