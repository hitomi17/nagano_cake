<main>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div  class="container">
      <h4 class="ml-5">ログイン</h4>
      <div class="row ml-5"><h5 class="ml-5">会員の方はこちらから</h5></div>

      <div class="row ml-5 mt-1">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %>
        </div>
      </div>

      <div class="row ml-5 mt-1">
        <div class="col-1"></div>
        <div class="col-3">
          <%= f.label :password  %>
        </div>
        <div class="col-8">
          <%= f.password_field :password, autocomplete: "current-password", :size=>"50" %>
        </div>
      </div>

      <div class="row ml-5 mt-3">
        <div class="col-4"></div>
        <div class="actions col-2" >
          <%= f.submit "ログイン", class: 'btn btn-primary' %>
        </div>
        <div class="col-6"></div>
      </div>

      <div class="row ml-5 mt-5"><h5 class="ml-5">会員登録がお済みでない方</h5></div>
      <div class="row ml-5 mt-3">
        <div class="ml-5">
          <p class="ml-5">
            <%= link_to "こちら", new_user_registration_path %>
            から新規登録を行なってください。
          </p>
        </div>
      </div>


  <!--
      <% if devise_mapping.rememberable? %>
        <div class="row field mb-3 ml-5">
          <%= f.check_box :remember_me, class: 'mt-1 ml-5' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>-->
    </div>
  <% end %>
</main>

